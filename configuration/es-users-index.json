{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 1,
        "analysis": {
            "filter": {
                "autocomplete_filter": {
                    "type": "edge_ngram",
                    "min_gram": 1,
                    "max_gram": 25
                }
            },
            "analyzer": {
                "autocomplete": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "autocomplete_filter"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "ref": {
                "index": false
            },
            "preferredUsername": {
                "analyzer": "standard",
                "index": false
            },
            "name": {
                "properties": {
                    "givenName": {
                        "analyzer": "autocomplete"
                    },
                    "familyName": {
                        "analyzer": "autocomplete"
                    }
                }
            },
            "displayName": {
                "index": false
            },
            "gender": {
            }
        }
    }
}