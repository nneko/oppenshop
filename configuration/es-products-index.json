{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 1,
        "analysis": {
            "filter": {
                "autocomplete_filter": {
                    "type": "edge_ngram",
                    "min_gram": 1,
                    "max_gram": 25
                }
            },
            "analyzer": {
                "autocomplete": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "autocomplete_filter"
                    ]
                }
            }
        }
    },
    "mappings": {
        "properties": {
            "ref": {
                "type": "text",
                "index": false
            },
            "name": {
                "type": "text",
                "fields": {
                    "raw": {
                        "type": "keyword"
                    }
                },
                "analyzer": "autocomplete"
            },
            "displayName": {
                "type": "text",
                "index": false
            },
            "description": {
                "type": "text",
                "analyzer": "autocomplete"
            },
            "specifications": {
                "type": "object"
            },
            "price": {
                "type": "scaled_float",
                "scaling_factor": 100
            },
            "currency": {
                "type": "text",
                "index": false
            },
            "quantity": {
                "type": "long",
                "index": false
            },
            "status": {
                "type": "text",
                "index": false,
                "fields": {
                    "raw": {
                        "type": "keyword"
                    }
                }
            }
        }
    }
}