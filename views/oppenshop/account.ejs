<main class="container">
    <section class="main-panel">
        <div class="row">
            <div class="col-4">
                <div class="list-group flex-column" id="account-settings-tablist" role="tablist">
                    <a class="list-group-item list-group-item-action sidebar-item" id="security-tab" data-toggle="list" role="tab" aria-controls="security" aria-selected="false" href="#security-pane">Login & Security</a>
                    <a class="list-group-item list-group-item-action sidebar-item active" id="contact-tab" data-toggle="list" role="tab" aria-controls="contact" aria-selected="true" href="#contact-pane">Contact Details</a>
                    <a class="list-group-item list-group-item-action sidebar-item" id="addresses-tab" data-toggle="list" role="tab" aria-controls="addresses" aria-selected="false" href="#addresses-pane">Addresses</a>
                    <a class="list-group-item list-group-item-action sidebar-item" id="orders-tab" data-toggle="list" role="tab" aria-controls="orders" aria-selected="false"
                        href="#orders-pane">Orders</a>
                    <a class="list-group-item list-group-item-action sidebar-item" id="payments-tab" data-toggle="list" role="tab" aria-controls="payments" aria-selected="false"
                        href="#payments-pane">Payment Methods</a>
                    <a class="list-group-item list-group-item-action sidebar-item" id="settings-tab" data-toggle="list" role="tab" aria-controls="settings" aria-selected="false" href="#settings-pane">Preferences</a>
                </div>
            </div>
            <div class="col-8">
                <div class="content-pane tab-content" id="account-settings-tab-content">
                    <% if(typeof(messages.success) !== 'undefined') { %>
                    <div id="main-alert" class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= messages.success %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    </div>
                    <% } %>
                    <% if(typeof(messages.info) !== 'undefined') { %>
                    <div id="main-alert" class="alert alert-primary alert-dismissible fade show" role="alert">
                        <%= messages.info %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    </div>
                    <% } %>
                    <% if(typeof(messages.error) !== 'undefined') { %>
                    <div id="main-alert" class="alert alert-danger alert-dismissible fade show" role="alert">
                        <%= messages.error %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    </div>
                    <% } %>
                    <div class="tab-pane fade" id="security-pane" role="tabpanel" aria-labelledby="security-tab">
                        <h2 class="pane-h2">Login & Security</h2>
                        <section class="standard-form-section">
                            <form id="security-form" class="standard-form" autocomplete="off" action="/user/account" method="POST" oninput=""
                                novalidate>
                                <input type="hidden" name="id" value="ls">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="username-basic-addon">Username</span>
                                        </div>
                                        <input id="username" class="form-control <% if(typeof(username) !== 'undefined') { %><%= username.class %><% } %>"
                                            type="text" name="username" placeholder="Email Address"
                                            value="<% if(typeof(user.emails["0"].value) !== 'undefined') { %><%= user.emails["0"].value %><% } %>"
                                            aria-label="email" aria-describedby="username-basic-addon" size="25" readonly>
                                        <div id="invalid-username" class="invalid-feedback">
                                            <% if(typeof(username) !== 'undefined' && username.class == 'is-invalid') { %><%= username.message %><% } else { %>Please
                                            enter a valid email address. <% } %>
                                        </div>
                                    </div>
                                    <small id="validationUsername" class="form-text text-muted  validation-msg hidden"></small>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="passowrd-basic-addon">Password</span>
                                        </div>
                                        <input id="password" class="form-control <% if(typeof(password) !== 'undefined') { %><%= password.class %><% } %>"
                                            type="password" name="password" value="" aria-label="Password" aria-describedby="password-basic-addon" size="25"
                                            required>
                                        <div id="invalid-password" class="invalid-feedback">
                                            <% if(typeof(password) !== 'undefined' && password.class == 'is-invalid') { %><%= password.message %><% } else { %>Please
                                            enter a password. <% } %>
                                        </div>
                                    </div>
                                    <small id="passwordHint" class="form-text text-muted hidden"></small>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="passowrd-basic-addon">Re-enter Password</span>
                                        </div>
                                        <input id="repassword" class="form-control <% if(typeof(password) !== 'undefined') { %><%= password.class %><% } %>"
                                            type="password" name="password-confirmation" value="" aria-label="Password" aria-describedby="password-basic-addon" size="25"
                                            required>
                                        <div id="invalid-password" class="invalid-feedback">
                                            <% if(typeof(password) !== 'undefined' && password.class == 'is-invalid') { %><%= password.message %><% } else { %>Please
                                            enter a password. <% } %>
                                        </div>
                                    </div>
                                    <small id="repasswordHint" class="form-text text-muted hidden"></small>
                                    <hr>
                                    <div id="security-update-button-container">
                                        <button id="update-security-button" type="submit" class="btn btn-light" onclick="">Update</button>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                    <div class="tab-pane fade show active" id="contact-pane" role="tabpanel" aria-labelledby="contact-tab">
                        <h2 class="pane-h2">Contact Information</h2>
                        <section class="standard-form-section">
                            <form id="contact-form" class="standard-form" autocomplete="off" action="/user/account" method="POST" oninput=""
                                novalidate>
                                <input type="hidden" name="id" value="ci">
                                <div class="form-group">                            
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="givenName-basic-addon">Given Name</span>
                                        </div>
                                        <input id="givenName"
                                            class="form-control <% if(typeof(givenName) !== 'undefined') { %><%= givenName.class %><% } %>"
                                            type="text" name="givenName"
                                            value="<% if(typeof(user.name.givenName) !== 'undefined') { %><%= user.name.givenName %><% } %>"
                                            aria-label="Given Name" aria-describedby="givenName-basic-addon" size="25" required>
                                        <div id="invalid-givenName" class="invalid-feedback">
                                            <% if(typeof(givenName) !== 'undefined' && givenName.class == 'is-invalid') { %><%= givenName.message %><% } else { %>You
                                            must provide your Given Name.<% } %>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="familyName-basic-addon">Family Name</span>
                                        </div>
                                        <input id="familyName"
                                            class="form-control <% if(typeof(familyName) !== 'undefined') { %><%= familyName.class %><% } %>"
                                            type="text" name="familyName"
                                            value="<% if(typeof(user.name.familyName) !== 'undefined') { %><%= user.name.familyName %><% } %>"
                                            aria-label="Family Name" aria-describedby="familyName-basic-addon" size="25" required>
                                        <div id="invalid-familyName" class="invalid-feedback">
                                            <% if(typeof(familyName) !== 'undefined' && familyName.class == 'is-invalid') { %><%= familyName.message %><% } else { %>You
                                            must provide your Family Name.<% } %>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="phone-basic-addon">Phone</span>
                                            </div>
                                            <input id="phone" class="form-control" type="text" name="phone" value="" aria-label="Address"
                                                aria-describedby="phone-basic-addon" size="25" required>
                                            <div id="invalid-phone" class="invalid-feedback">
                                                You must a valid phone number.
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <p>Primary Address</p>
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="streetaddress-basic-addon">Street & No.</span>
                                            </div>
                                            <input id="addressStreet" class="form-control" type="text" name="addressStreet" value="" aria-label="Address"
                                                aria-describedby="streetaddress-basic-addon" size="25" required>
                                            <div id="invalid-street" class="invalid-feedback">
                                                You must provide an address.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="addressLocality-basic-addon">Community / Town / City</span>
                                            </div>
                                            <input id="addressLocality" class="form-control" type="text" name="addressLocality" value=""
                                                aria-label="Address" aria-describedby="addressLocality-basic-addon" size="25" required>
                                            <div id="invalid-street" class="invalid-feedback">
                                                You must provide an address location.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="form-group form-inline">
                                            <label id="parishLabel" class="form-label" for="addressRegion">Parish</label>
                                            <select id="addressRegion" class="form-control" type="text" name="addressRegion" value=""
                                                aria-label="addressRegion" aria-describedby="addressRegion-basic-addon">
                                                <option selected="selected">Kingston & St. Andrew</option>
                                                <option>St. Catherine</option>
                                                <option>Clarendon</option>
                                                <option>Manchester</option>
                                                <option>St. Elizabeth</option>
                                                <option>Westmoreland</option>
                                                <option>Hanover</option>
                                                <option>St. James</option>
                                                <option>Trelawny</option>
                                                <option>St. Ann</option>
                                                <option>St. Mary</option>
                                                <option>Portland</option>
                                                <option>St. Thomas</option>
                                            </select>
                                            <div id="invalid-region" class="invalid-feedback">
                                                You must select a region.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="form-group form-inline">
                                            <label id="postLabel" class="form-label" for="addressPostcode">Postcode</label>
                                            <input id="addressPostcode" class="form-control" type="text" name="addressPostcode" value=""
                                                aria-label="Postcode" aria-describedby="addressPostcode-basic-addon" size="5" required>
                                            <div id="invalid-postcode" class="invalid-feedback">
                                                Please enter a valid postal code.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="form-group form-inline">
                                            <div class="form-group form-inline">
                                                <label id="addressCountryLabel" class="form-label" for="addressCountry">Country</label>
                                                <select id="addressCountry" class="form-control" type="text" name="addressCountry" value=""
                                                    aria-label="addressCountry" aria-describedby="addressCountry-basic-addon" readonly>
                                                    <option selected="selected">Jamaica</option>
                                                </select>
                                                <div id="invalid-country" class="invalid-feedback">
                                                    You must select a country.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div id="update-contact-button-container">
                                        <button id="update-contact-button" type="submit" class="btn btn-light" onclick="">Update</button>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                    <div class="tab-pane fade" id="addresses-pane" role="tabpanel" aria-labelledby="addresses-tab">
                        <h2 class="pane-h2">Addresses</h2>
                        <section id="address-list-section">
                            <table id="address-table" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Street</th>
                                        <th>Locality</th>
                                        <th>Region</th>
                                        <th>Postcode</th>
                                        <th>Country</th>
                                        <th>Phone</th>
                                    </tr>
                                </thead>
                                <tbody>

                                </tbody>
                            </table>
                        </section>
                        <hr>
                        <section class="standard-form-section">
                            <h3>Add a new address</h3>
                            <form id="addresses-form" class="standard-form" autocomplete="off" action="/user/account" method="POST" oninput=""
                            novalidate>
                            <input type="hidden" name="id" value="na">
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="add-address-fullname-basic-addon">Full name</span>
                                            </div>
                                            <input id="add-address-fullname" class="form-control" type="text" name="fullname" value="" aria-label="Address"
                                                aria-describedby="fullname-basic-addon" size="25" required>
                                            <div id="add-address-invalid-fullname" class="invalid-feedback">
                                                You must a valid name.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="add-address-phone-basic-addon">Phone</span>
                                            </div>
                                            <input id="add-address-phone" class="form-control" type="text" name="phone" value="" aria-label="Address"
                                                aria-describedby="phone-basic-addon" size="25" required>
                                            <div id="add-address-invalid-phone" class="invalid-feedback">
                                                You must a valid phone number.
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <p>Primary Address</p>
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="add-address-streetaddress-basic-addon">Street & No.</span>
                                            </div>
                                            <input id="add-address-addressStreet" class="form-control" type="text" name="addressStreet" value="" aria-label="Address"
                                                aria-describedby="streetaddress-basic-addon" size="25" required>
                                            <div id="iadd-address-nvalid-street" class="invalid-feedback">
                                                You must provide an address.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="input-group mb-3">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="add-address-addressLocality-basic-addon">Community / Town / City</span>
                                            </div>
                                            <input id="add-address-addressLocality" class="form-control" type="text" name="addressLocality" value=""
                                                aria-label="Address" aria-describedby="addressLocality-basic-addon" size="25" required>
                                            <div id="add-address-invalid-street" class="invalid-feedback">
                                                You must provide an address location.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="form-group form-inline">
                                            <label id="add-address-parishLabel" class="form-label" for="addressRegion">Parish</label>
                                            <select id="add-address-addressRegion" class="form-control" type="text" name="addressRegion" value=""
                                                aria-label="addressRegion" aria-describedby="addressRegion-basic-addon">
                                                <option selected="selected">Kingston & St. Andrew</option>
                                                <option>St. Catherine</option>
                                                <option>Clarendon</option>
                                                <option>Manchester</option>
                                                <option>St. Elizabeth</option>
                                                <option>Westmoreland</option>
                                                <option>Hanover</option>
                                                <option>St. James</option>
                                                <option>Trelawny</option>
                                                <option>St. Ann</option>
                                                <option>St. Mary</option>
                                                <option>Portland</option>
                                                <option>St. Thomas</option>
                                            </select>
                                            <div id="add-address-invalid-region" class="invalid-feedback">
                                                You must select a region.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="form-group form-inline">
                                            <label id="add-address-postLabel" class="form-label" for="addressPostcode">Postcode</label>
                                            <input id="add-address-addressPostcode" class="form-control" type="text" name="addressPostcode" value=""
                                                aria-label="Postcode" aria-describedby="addressPostcode-basic-addon" size="5" required>
                                            <div id="add-address-invalid-postcode" class="invalid-feedback">
                                                Please enter a valid postal code.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        <div class="form-group form-inline">
                                            <div class="form-group form-inline">
                                                <label id="add-address-addressCountryLabel" class="form-label" for="addressCountry">Country</label>
                                                <select id="add-address-addressCountry" class="form-control" type="text" name="addressCountry" value=""
                                                    aria-label="addressCountry" aria-describedby="addressCountry-basic-addon" readonly>
                                                    <option selected="selected">Jamaica</option>
                                                </select>
                                                <div id="add-address-invalid-country" class="invalid-feedback">
                                                    You must select a country.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div id="addresses-add-button-container">
                                        <button id="add-addresses-button" type="submit" class="btn btn-light" onclick="">Add Address</button>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                    <div class="tab-pane fade" id="orders-pane" role="tabpanel" aria-labelledby="orders-tab">
                        <h2 class="pane-h2">Orders</h2>
                        <section class="standard-form-section">
                        </section>
                    </div>
                    <div class="tab-pane fade" id="payments-pane" role="tabpanel" aria-labelledby="payments-tab">
                        <h2 class="pane-h2">Payment Methods</h2>
                        <section class="standard-form-section">
                            <form id="payments-form" class="standard-form" autocomplete="off" action="/user/account" method="POST" oninput=""
                                novalidate>

                                <input type="hidden" name="id" value="pm">
                                <div class="form-group">
                                    <hr>
                                    <div id="payment-add-button-container">
                                        <button id="payment-add-button" type="submit" class="btn btn-light" onclick="">Add Payment Method</button>
                                    </div>
                                </div>
                            </form>
                        </section>
                    </div>
                    <div class="tab-pane fade" id="settings-pane" role="tabpanel" aria-labelledby="settings-tab">
                        <h2 class="pane-h2">Preferences</h2>
                        <section class="standard-form-section">
                            <form id="settings-form" class="standard-form" autocomplete="off" action="/user/account" method="POST" oninput=""
                                novalidate>

                                <input type="hidden" name="id" value="pr">
                                <div class="form-group">
                                    <hr>
                                    <h3>Remove Account</h3>
                                    <p>Account removal will purge all user data and is an irreversible process.</p>
                                    <div id="delete-account-button-container">
                                        <button id="delete-account-button" type="submit" class="btn btn-danger" onclick="">Delete Account</button>
                                    </div>                
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            <div>
        </div>
    </section>
</main>
