{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 1,
        "analysis": {
            "filter": {
                "autocomplete_filter": {
                    "type": "edge_ngram",
                    "min_gram": 3,
                    "max_gram": 25
                }
            },
            "analyzer": {
                "autocomplete": {
                    "type": "custom",
                    "tokenizer": "standard",
                    "filter": [
                        "lowercase",
                        "autocomplete_filter"
                    ]
                }
            }
        }
    },
    "mappings": {
        "products": {
            "properties": {
                "name": {
                    "type": "text",
                    "analyzer": "autocomplete"
                },
                "displayName": {
                    "type": "text",
                    "analyzer": "autocomplete"
                },
                "description": {
                    "type": "text",
                    "analyzer": "autocomplete"
                },
                "specifications": {
                    "type": "object",
                    "analyzer": "autocomplete"
                },
                "price": {
                    "type": "scaled_float",
                    "scaling_factor": 100
                },
                "currency": {
                    "type": "text"
                },
                "quantity": {
                    "type": "integer"
                }
            }
        }
    }
}